---
interface Props {
    href: string;
    date: string;
    class?: string;
}

const { href, date, class: className = '' } = Astro.props;
---

<div class={`flex flex-col md:flex-row md:justify-between md:items-baseline gap-x-4 ${className}`}>
    <a href={href} class="tactile-link text-xl"><slot /></a>
    <span class="text-sm italic text-muted md:flex-shrink-0 mt-1 md:mt-0">{date}</span>
</div>
