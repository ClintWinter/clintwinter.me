<script>
    const trigger = document.getElementById('candlelight-trigger');
    if (!trigger) throw new Error();

    let active = false;

    trigger.addEventListener('click', () => {
        if (active) return;
        active = true;

        document.body.classList.add('candlelight-mode');

        setTimeout(() => {
            document.body.classList.remove('candlelight-mode');
            setTimeout(() => { active = false; }, 2000);
        }, 4000);
    });
</script>
