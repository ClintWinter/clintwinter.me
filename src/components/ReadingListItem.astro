---
const { href, tags = [] } = Astro.props;

const baseURI = new URL(href).hostname;
---

<div class="py-4">
    <div class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-3 mb-2">
        <a href={href} rel="noopener noreferrer" class="tactile-link text-lg leading-snug">
            <slot />
        </a>
        <span class="text-sm italic text-muted flex-shrink-0">{baseURI}</span>
    </div>

    {Boolean(tags.length) && (
        <div class="flex flex-wrap gap-1.5">
            {tags.map(tag => (
                <span class="text-xs font-body italic px-1.5 py-0.5 border border-tan text-muted bg-[#EDE8DD]" style="line-height: 1.4;">{tag}</span>
            ))}
        </div>
    )}
</div>
