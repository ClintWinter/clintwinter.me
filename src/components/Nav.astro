---
interface Props {
    page?: 'home' | 'other';
    backHref?: string;
    backText?: string;
    navBorder?: boolean;
}

const { page = 'other', backHref = '/', backText = '‚Üê Return Home', navBorder = true } = Astro.props;
---

{page === 'home' ? (
    <nav class="flex justify-between items-center pb-6 mb-12 border-b border-tan">
        <a href="/" class="font-heading text-xl font-bold text-brown no-underline">Clint Winter</a>
        <div class="flex gap-x-6 font-body text-base italic">
            <a href="/blog" class="tactile-link">Musings</a>
            <a href="/reading-list" class="tactile-link">Reading</a>
            <a href="/about" class="tactile-link">About</a>
        </div>
    </nav>
) : (
    <nav class={`pb-4 mb-6 text-center ${navBorder ? 'border-b border-tan' : ''}`}>
        <a href={backHref} class="tactile-link text-sm font-body italic">{backText}</a>
    </nav>
)}
