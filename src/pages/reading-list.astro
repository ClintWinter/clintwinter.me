---
import '@fontsource/abhaya-libre';
import ReadingListItem from '../components/ReadingListItem.astro';
import ReadingListSection from '../components/ReadingListSection.astro';
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Clint Winter | Reading List">
    <main class="max-w-5xl mx-auto px-4 rounded-sm">
        <h1 class="text-4xl mb-12 font-semibold text-slate-700 dark:text-slate-200">Reading list</h1>

        <ReadingListSection title={'January 2022'}>
            <ReadingListItem 
                tags={['Rails', 'Architecture']} 
                href="https://dev.37signals.com/vanilla-rails-is-plenty/"
            >Vanilla rails is plenty</ReadingListItem>

            <ReadingListItem 
                tags={['Rails', 'Architecture', 'DDD']}
                href="https://world.hey.com/jorge/code-i-like-i-domain-driven-boldness-71456476"
            >Code I like (I): Domain-driven boldness</ReadingListItem>

            <ReadingListItem 
                tags={['Rails', 'Architecture', 'DDD']}
                href="https://world.hey.com/jorge/code-i-like-ii-fractal-journeys-b7688f93"
            >Code I like (II): Fractal journeys</ReadingListItem>

            <ReadingListItem 
                tags={['Rails', 'Architecture', 'DDD']}
                href="https://world.hey.com/jorge/code-i-like-iii-good-concerns-5a1b391c"
            >Code I like (III): Good concerns</ReadingListItem>

            <ReadingListItem 
                tags={['SOLID']}
                href="https://dannorth.net/2021/03/16/cupid-the-back-story/"
