---
import { DateTime } from 'luxon';
import MainLayout from "@layouts/MainLayout.astro";
import OrnamentDivider from "@components/OrnamentDivider.astro";
import { guessDateFormat } from '../utils/dates';

const { frontmatter } = Astro.props;
---

<MainLayout
    title={`Clint Winter | ${frontmatter.title}`}
    backHref="/blog"
    backText="← Return to Musings"
    navBorder={false}
>
    <article class="font-body">
        <div class="text-center mb-8">
            <span class="font-heading text-2xl text-gold">❦</span>
        </div>

        <h1 class="font-heading text-3xl md:text-4xl font-bold mb-3 leading-tight text-center text-burgundy">
            {frontmatter.title}
        </h1>

        {!!frontmatter.publishedAt && (
            <p class="text-base italic text-center text-muted mb-10">
                {guessDateFormat(frontmatter.publishedAt).toLocaleString(DateTime.DATE_FULL)}
            </p>
        )}

        <div class="prose max-w-none text-base md:text-xl leading-relaxed">
            <slot />
        </div>

        <p class="text-center font-body text-lg italic text-muted mt-10 mb-2">
            Thanks for reading.
        </p>

        <OrnamentDivider ornament="✻" />
    </article>
</MainLayout>
