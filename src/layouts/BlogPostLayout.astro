---
import MainLayout from "./MainLayout.astro";
const { frontmatter } = Astro.props;
---

<MainLayout title={`Clint Winter | ${frontmatter.title}`}>
    <main class="max-w-prose mx-auto md:px-2 text-nord-n-600 dark:text-nord-s-300">
        <h1 class="text-2xl md:text-3xl leading-none font-semibold mb-4">{frontmatter.title}</h1>
        <p class="mb-8">{new Date(frontmatter.publishedAt).toDateString()}</p>

        <article class="post-container text-lg leading-relaxed">
            <slot />
        </article>
    </main>
</MainLayout>

<style>
.post-container {
    @apply text-lg leading-relaxed;
}

.post-container :global(pre.torchlight) {
    @apply !bg-slate-950;
}

.post-container > :global(*) {
    @apply mb-6;
}

.post-container :global(img) {
    @apply mx-auto;
}

/* LISTS */
.post-container :global(ol) {
    @apply list-decimal ml-8 my-8;
}

.post-container :global(* ol) {
    @apply list-decimal ml-8 my-2;
}

.post-container :global(ol li:not(:last-child)) {
    @apply mb-2;
}

.post-container :global(li::marker) {
    @apply font-bold text-slate-500;
}

.post-container :global(ul) {
    @apply list-disc ml-8 my-8;
}

.post-container :global(* ul) {
    @apply list-disc ml-8 my-2;
}

.post-container :global(ul li:not(:last-child)) {
    @apply mb-2;
}

.post-container :global(li *:not(:last-child)) {
    @apply mb-2;
}

/* LINKS */
.post-container :global(a) {
    @apply text-sky-600 font-semibold hover:underline;
}

:global(.dark) .post-container :global(a) {
    @apply text-sky-400 font-semibold hover:underline;
}

/* QUOTES */
.post-container :global(blockquote) {
    @apply p-4 border-l-8 border-sky-500 bg-slate-200 rounded;
}

:global(.dark) .post-container :global(blockquote) {
    @apply p-4 border-l-8 border-sky-500 bg-slate-800 rounded shadow;
}

/* HEADINGS */
.post-container :global(h1) {
    @apply text-3xl font-bold leading-none pt-6;
}

.post-container :global(h2) {
    @apply text-2xl font-bold leading-none pt-6;
}

.post-container :global(h3) {
    @apply text-lg font-bold leading-none pt-6;
}

.post-container :global(h4) {
    @apply text-base font-bold leading-none pt-6;
}

/* CODE */
.post-container :global(pre) {
    @apply p-4 rounded overflow-x-auto text-xs sm:text-sm md:text-base;
}

.post-container :global(pre .line-number) {
    @apply mr-2;
}

.post-container :global(:not(pre) code) {
    @apply text-purple-700 px-1 rounded;
}

:global(.dark) .post-container :global(:not(pre) code) {
    @apply bg-transparent text-purple-300 px-1 rounded;
}

/* TABLES */
.post-container :global(table th) {
    @apply px-4 py-2 text-slate-600 text-base tracking-tighter leading-none border border-slate-200;
}

.post-container :global(table td) {
    @apply px-4 py-2 leading-none border border-slate-200;
}

.post-container :global(table tbody tr) {
    @apply even:bg-slate-200;
}

:global(.dark) .post-container :global(table th) {
    @apply px-4 py-2 text-slate-300 leading-none border border-slate-700;
}

:global(.dark) .post-container :global(table td) {
    @apply px-4 py-2 leading-none border border-slate-700;
}

:global(.dark) .post-container :global(table tbody tr) {
    @apply even:bg-slate-900;
}
</style>
